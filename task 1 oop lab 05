#include<iostream>
using namespace std;
class car{
	private:
	int reginum;
	string model;
	string name;
	string owner;
	
public:
	car(){
		reginum=0;
		model="unknown";
		name="unknown";
	}
	void setcar(int num,string model1,string name1){
		reginum=num;
	    model=model1;
	 name=name1;
	}
	
	car(const &b){
	}
void display(){
	cout<<"The name of car is "<<name<<endl;
	cout<<"The model of car is "<<model<<endl;
	cout<<"The registration number is "<<reginum<<endl;
	cout<<"The owner is"<<owner<<endl;
}	
};

int main(){
	car c1,c2;
	c1.display();
	c1.setcar(243,"toyota","yaris");
	c1.display();
    c2.setcar(432,"hyundaii","tucson");
	c2.display();
	
	return 0;
}
